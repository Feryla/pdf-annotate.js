{
  "name": "pdf-annotate.js",
  "version": "0.1.0",
  "description": "Annotation layer for pdf.js",
  "type": "module",
  "main": "dist/pdf-annotate.js",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "copy-shared": "node scripts/cp-shared.js",
    "dev": "npm run copy-shared && vite --config vite.web.js",
    "dev:sandbox": "npm run copy-shared && vite --config vite.sandbox.js",
    "build": "vite build && MINIFY=1 vite build",
    "preview": "vite preview"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Feryla/pdf-annotate.js.git"
  },
  "keywords": [
    "pdf",
    "annotation"
  ],
  "author": "Feryla",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Feryla/pdf-annotate.js/issues"
  },
  "homepage": "https://github.com/Feryla/pdf-annotate.js#readme",
  "devDependencies": {
    "@vitest/coverage-v8": "^3.1.1",
    "canvas": "^3.1.0",
    "jsdom": "^26.0.0",
    "pdfjs-dist": "^5.1.91",
    "vite": "^6.2.5",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "twitter-text": "^3.1.0"
  }
}
